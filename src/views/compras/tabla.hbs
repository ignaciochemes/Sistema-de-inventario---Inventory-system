<body>
    {{#if compras}}
    <div class="container p-4 text-center">
        {{>buscarEnTabla}}
    </div>
      <div class="container mx-auto">
          <div id="cont-tabla">
            <h1 class="text-center">Tabla compras de productos</h1>
            <button type="button" class="btn btn-success text-dark" data-toggle="modal" data-target="#agregarCompra">
              Agregar nueva compra
            </button>
            <!-- Modal -->
            <div class="modal fade" id="agregarCompra" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Con este formulario, usted podra realizar compras separadas de su inventario/stock.</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    {{>formularioCompra}}
                  </div>
                </div>
              </div>
            </div>
            <table class="order-table table mx-auto" id="tablaArticulos">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Producto</th>
                        <th>Cant. Comprados</th>
                        <th>Precio Compra</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody id="mitabla">
                    {{#each compras}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{producto}}</td>
                            <td>{{cantidadComprados}}</td>
                            <td>{{precioCompra}}</td>
                            <td>
                              <!--<a href="mistock/delete/{{id}}" class="btn btn-danger">Borrar articulo</a>></a> -->
                              <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModalLong">
                                Eliminar
                              </button>
                              <!-- Modal -->
                              <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLongTitle">Seguro quiere eliminar la compra?</h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                      </button>
                                    </div>
                                    <div class="modal-body">
                                      La compra se borrara de la base de datos y no podra recuperarse. Pero puede volver a cargarla.
                                    </div>
                                    <div class="modal-footer">
                                      <a href="/compras/delete/{{id}}" class="btn btn-danger btn-sm" id="botonEliminar">Eliminar</a>
                                    </div>
                                  </div>
                                </div>
                              </div>
                                <a href="/compras/edit/{{id}}" class="btn btn-light btn-sm" id="botonEditar">Editar</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
          </div>
          {{else}}
                <div class="col-md-4 mx-auto p-5">
                    <h1 class="text-center">Tabla Compras</h1>
                    <div class="card card-body text-center">
                        <p>No tiene agregada ninguna compra</p>
                        <a class="btn btn-success" href="/compras/add">Agregar nueva compra</a>
                    </div>
            </div>
            {{/if}}
      </div>
</body>