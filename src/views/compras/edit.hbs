<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/compras/edit/{{compra.id}}" method="POST">
                        <h4>Editar compra con el id: {{compra.id}}</h4>
                        <div class="form-group">
                            Producto:
                            <input type="text" value="{{compra.producto}}" class="form-control" name="producto" autofocus>
                        </div>
                        <div class="form-group">
                            Descripcion:
                            <textarea name="descripcion" id="" rows="2" class="form-control" placeholder="Descripcion">{{compra.descripcion}}</textarea>
                        </div>
                        <div class="form-row">
                            <div class="col-auto my-1">
                                {{#if categorias}}
                                <p>Categorias:</p>
                                {{else}}
                                <p>No tiene categorias, puede crearlas <a href="/categorias">AQUI</a></p>
                                {{/if}}
                                <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Categorias</label>
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="categoria">
                                    <option value="Actual:" selected>{{compra.categoria}}</option>
                                    {{#each categorias}}
                                    <option value="Cambiar a:">{{titulo}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            Precio Compra:
                            <input type="number" value="{{compra.precioCompra}}" name="precioCompra" class="form-control" placeholder="Precio Compra: {{articulo.precioCompra}}">
                        </div>
                        <div class="form-group">
                            Precio Venta:
                            <input type="number" value="{{compra.precioVenta}}" name="precioVenta" class="form-control">
                        </div>
                        <div class="form-group">
                            Cantidad Comprados:
                            <input type="number" value="{{compra.cantidadComprados}}" name="cantidadComprados" class="form-control">
                        </div>
                        <div class="form-group">
                            Gastos Envio:
                            <input type="number" value="{{compra.gastosEnvio}}" name="gastosEnvio" class="form-control">
                        </div>
                        <div class="form-group">
                            Gastos Varios:
                            <input type="number" value="{{compra.gastosVarios}}" name="gastosVarios" class="form-control">
                        </div>
                        <div class="form-group">
                            Proveedor:
                            <input type="text" value="{{compra.proveedor}}" name="proveedor" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                Guardar
                            </button>
                            <a href="/compras" class="btn btn-dark btn-sm">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>