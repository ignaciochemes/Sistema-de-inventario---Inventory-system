<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <h4 class="text-center">Edicion de articulo N*: {{articulo.id}}</h4>
            <div class="card">
                <div class="card-body">
                    <form action="/mistock/edit/{{articulo.id}}" method="POST">
                        <div class="form-group">
                            Producto:
                            <input type="text" value="{{articulo.producto}}" class="form-control" name="producto" autofocus>
                        </div>
                        <div class="form-group">
                            Descripcion:
                            <textarea name="descripcion" id="" rows="2" class="form-control" placeholder="Descripcion">{{articulo.descripcion}}</textarea>
                        </div>
                        <div class="form-row">
                            <div class="col-auto my-1">
                                <p>Si no tiene categorias, puede crearlas <a href="/categorias">AQUI</a></p>
                                <p>Categoria:</p>
                                <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Categorias</label>
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="categoria">
                                    <option selected>Actual: {{articulo.categoria}}</option>
                                    {{#each categorias}}
                                    <option>Cambiar a: {{titulo}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            Precio Compra:
                            <input type="number" value="{{articulo.precioCompra}}" name="precioCompra" class="form-control">
                        </div>
                        <div class="form-group">
                            Precio Venta:
                            <input type="number" value="{{articulo.precioVenta}}" name="precioVenta" class="form-control">
                        </div>
                        <div class="form-group">
                            Cantidad/Stock:
                            <input type="number" value="{{articulo.cantidad}}" name="cantidad" class="form-control">
                        </div>
                        <div class="form-group">
                            Cantidad Vendidos:
                            <input type="number" value="{{articulo.cantidadVendidos}}" name="cantidadVendidos" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                Guardar
                            </button>
                            <a href="/mistock" class="btn btn-dark btn-sm">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>