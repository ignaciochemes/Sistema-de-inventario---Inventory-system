<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <h4 class="text-center">Edicion de articulo N*: {{articulo.id}}</h4>
            <div class="card">
                <div class="card-body">
                    <form action="/articulos/edit/{{articulo.id}}" method="POST">
                        <div class="form-group">
                            Producto:
                            <input type="text" value="{{articulo.producto}}" class="form-control" name="producto" autofocus>
                        </div>
                        <div class="form-group">
                            Descripcion:
                            <textarea name="descripcion" id="" rows="2" class="form-control" placeholder="Descripcion">{{articulo.descripcion}}</textarea>
                        </div>
                        <div class="form-row">
                            <div class="col-auto my-1">
                                {{#if categorias}}
                                <p>Categoria:</p>
                                {{else}}
                                <p>Si no tiene categorias, puede crearlas <a href="/categorias">AQUI</a></p>
                                {{/if}}
                                <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Categorias</label>
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="categoria">
                                    <option selected>{{articulo.categoria}}</option>
                                    {{#each categorias}}
                                    <option>{{titulo}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            Precio Costo:
                            <input type="number" value="{{articulo.precioCosto}}" name="precioCosto" class="form-control">
                        </div>
                        <div class="form-group">
                            Precio Venta:
                            <input type="number" value="{{articulo.precioVenta}}" name="precioVenta" class="form-control">
                        </div>
                        <div class="form-group">
                            Proveedor:
                            <input type="text" value="{{articulo.proveedor}}" name="proveedor" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                Guardar
                            </button>
                            <a href="/articulos" class="btn btn-danger">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>