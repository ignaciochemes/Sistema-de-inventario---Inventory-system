<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
        <h3 class="text-center">Agregar producto a stock</h3>
            <div class="card">
                <div class="card-body">
                    <form action="/articulos/addtostock/{{articulo.id}}" method="POST">
                        <div class="form-group">
                            Id Articulo
                            <input type="text" onKeyDown="return false" value="{{articulo.id}}" class="form-control" name="id">
                        </div>
                        <div class="form-group">
                            Producto
                            <input type="text" onKeyDown="return false" value="{{articulo.producto}}" class="form-control" name="producto">
                        </div>
                        <div class="form-group">
                            Categoria
                            <input type="text" onKeyDown="return false" value="{{articulo.categoria}}" name="categoria" class="form-control">
                        </div>
                        <div class="form-group">
                            Precio Costo
                            <input type="number" onKeyDown="return false" value="{{articulo.precioCosto}}" name="precioCompra" class="form-control">
                        </div>
                        <div class="form-group">
                            Precio Venta
                            <input type="number" onKeyDown="return false" value="{{articulo.precioVenta}}" name="precioVenta" class="form-control">
                        </div>
                        <div class="form-group">
                            Proveedor
                            <input type="text" onKeyDown="return false" value="{{articulo.proveedor}}" name="proveedor" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" id="" rows="2" class="form-control" placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="number" name="cantidad" class="form-control" placeholder="Cantidad/Stock">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                Agregar nuevo stock
                            </button>
                            <a href="/articulos" class="btn btn-danger">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>