<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
        <h3 class="text-center">Agregar nuevo ingreso del producto</h3>
            <div class="card">
                <div class="card-body">
                    <form action="/articulos/addnuevoingreso/{{articulo.id}}" method="POST">
                        <div class="form-group">
                            Id Articulo
                            <input type="text" onKeyDown="return false" value="{{articulo.id}}" class="form-control" name="id">
                        </div>
                        <div class="form-group">
                            Cuantos productos ingresaron?
                            <input type="number" class="form-control" name="cantidadIngresados" placeholder="Ingresa aqui la cantidad de productos que ingresaron">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                Agregar al sistema
                            </button>
                            <a href="/articulos" class="btn btn-danger">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>