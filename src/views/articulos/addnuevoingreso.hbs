<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/articulos/addnuevoingreso/{{articulo.id}}" method="POST">
                        <div class="form-group">
                            Producto:
                            <input type="text" value="{{articulo.producto}}" class="form-control" name="producto" autofocus>
                        </div>
                        <div class="form-group">
                            Descripcion:
                            <textarea id="" rows="2" class="form-control" name="descripcion">{{articulo.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            Categoria del producto:
                            <input type="text" value="{{articulo.categoria}}" name="categoria" class="form-control">
                        </div>
                        <div class="form-group">
                            Precio Costo:
                            <input type="number" value="{{articulo.precioCosto}}" name="precioCosto" class="form-control">
                        </div>
                        <div class="form-group">
                            Precio Venta:
                            <input type="number" value="{{articulo.precioVenta}}" name="precioVenta" class="form-control" placeholder="Precio Venta c/u">
                        </div>
                        <div class="form-group">
                            Cantidad/Stock Comprados
                            <input type="number" name="cantidadIngresados" class="form-control" placeholder="Cantidad/Stock comprados">
                        </div>
                        <div class="form-group">
                            Gastos Envios:
                            <input type="number" name="gastosEnvio" class="form-control" placeholder="Gastos Envio">
                        </div>
                        <div class="form-group">
                            Gastos Varios:
                            <input type="number" name="gastosVarios" class="form-control" placeholder="Gastos Varios">
                        </div>
                        <div class="form-group">
                            Proveedor:
                            <input type="text" value="{{articulo.proveedor}}" name="proveedor" class="form-control" placeholder="Proveedor">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                Agregar nueva compra
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>