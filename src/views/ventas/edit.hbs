<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/ventas/edit/{{id}}" method="POST">
                        <h4>Editar venta con id: {{ventas.id}}</h4>
                        <div class="form-group">
                            Producto:
                            <input type="text" value="{{ventas.producto}}" class="form-control" name="producto" autofocus>
                        </div>
                        <div class="form-group">
                            Descripcion:
                            <textarea name="descripcion" id="" rows="2" class="form-control" placeholder="Descripcion">{{ventas.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            Cliente:
                            <input type="text" value="{{ventas.cliente}}" name="cliente" class="form-control">
                        </div>
                        <div class="form-group">
                            Cantidad Vendidos:
                            <input type="number" value="{{ventas.cantidadVendidos}}" name="cantidadVendidos" class="form-control">
                        </div>
                        <div class="form-group">
                            Ganancia Bruta:
                            <input type="number" value="{{ventas.gananciaBruta}}" name="gananciaBruta" class="form-control">
                        </div>
                        <div class="form-group">
                            Ganancia Neta:
                            <input type="number" value="{{ventas.gananciaNeta}}" name="gananciaNeta" class="form-control">
                        </div>
                        <div class="form-group">
                            Monto de la venta:
                            <input type="number" value="{{ventas.montoVenta}}" name="montoVenta" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">
                                Guardar
                            </button>
                            <a href="/ventas" class="btn btn-dark btn-sm">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>